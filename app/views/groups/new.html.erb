<h1>New Group</h1>

<%= form_with(model: @group, url: groups_path) do |f| %>
  <div class="field">
    <%= f.label :name, "Group Name" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="actions">
    <%= f.submit "Create Group" %>
  </div>
<% end %>

<%= link_to "Back to Groups", groups_path %>